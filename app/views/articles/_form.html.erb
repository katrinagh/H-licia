<%= form_for(@article) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, required: true, autofocus: true, placeholder: "Enter product title" %>
  </p>
  <p>
    <%= f.label :price %><br>
    <%= f.number_field :price, required: true %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>