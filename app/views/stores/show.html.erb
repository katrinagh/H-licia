<!-- Store -->

<div class="container">
  <div class="row">
    <div class="d-flex">
      <%=link_to "Home", stores_path, class:"text-primary p-1 text-decoration-none" %>
      <p class="p-1">></p>
      <p class="text-primary p-1"><%= @store.title %></p>
    </div>

    <!-- image + bouton back et search -->
    <div class="image_p" style="background-image: url(<%= image_path(@store.image_url) %>)">
      <div class="d-flex justify-content-between">
        <div>
          <%= link_to stores_path, style: "text-decoration: none" do %>
            <%= image_tag("back.png", width: "45", height: "45", class:"rounded-circle mt-3") %>
          <% end %>
        </div>
        <div>
          <%= image_tag("loupe.png", width: "45", height: "45", class:"rounded-circle mt-3") %>
        </div>
      </div>
    </div>

    <div>
      <h1 class="mt-3 fw-bolder">
        <%= @store.title %>
      </h1>
      <span class="d-flex">
        <div>
          <%= image_tag("etoile.jpg", width: "16", height: "16") %>
          <%= @store.rating %> (95 notes)
        </div>
      </span>

      <span>
        Open till 11:00 PM
      </span>

      <div>
        Free delivery starting from 15 CHF
      </div>

      <div class="d-flex justify-content-between">
        <div>
          <%= image_tag("drone1.jpg", width: "28", height: "28", class:"rounded-circle") %>
          <span>Delivery in <%= @store.estimated_delivery_time%></span>
        </div>
        <!-- ajout ici de la fonctionnalitÃ© de livrer plus tard -->
        <span class="main">Edit</span>
      </div>
    </div>
  </div>

  <div class="col-sm-8 my-3">
  <!--
    <%= form_with url: stores_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Type a keyword"
    %>
    <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
    -->
    <%= image_tag("breakpoint.png", width: "100%") %>
  </div>

  <!-- Articles pour chaque store -->

  <h4 class="mb-4 mt-4" ><strong>1 purchased = 1 offered </strong></h4>
  <% article = @articles.last %>
  <%= link_to article_path(article), style: "text-decoration: none" do %>
    <div class="d-flex justify-content-between">
      <div>
        <h3 class="title"><strong><span style="color: black;"><%= article.title %></span></strong></h3>
        <div class="main"><%= article.price %> CHF</div>
        <p><span style="color: grey;"><%= article.description.truncate(24)%></span></p>
      </div>
      <div>
        <%= image_tag(article.image_url, width: "120", height: "120" ) %>
      </div>
    </div>
  <%end%>

<!-- mettre en place le systeme de breakpoint ()-->
  <h4 class="mb-4 mt-4"><strong>Pain</strong></h4>
  <% @articles.each do |article| %>
    <%= link_to article_path(article), style: "text-decoration: none" do %>
      <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
          <h3 class="fs-5 title"><strong><span style="color: black;"><%= article.title %></span></strong></h3>
          <div class="main"><%= sprintf('%.2f', article.price.to_f) %> CHF</div>
          <p><span style="color: grey;"><%= article.description.truncate(24)%></span></p>
        </div>
        <div>
          <p>
            <%= button_to "Add #{article.title} to cart", article_order_add_to_cart_path(@article_id: ) %>
          </p>
        </div>
      </div>
    <% end %>
  <%end%>
</div>
